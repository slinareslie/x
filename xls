# Obtener la fecha actual
$currentDate = Get-Date
$year = $currentDate.Year
$month = $currentDate.Month
$day = $currentDate.Day

# Ajustar fecha
if ($currentDate.DayOfWeek -eq 'Monday') {
    # Si es lunes, fijar el viernes anterior
    $adjustedDate = $currentDate.AddDays(-3)
}
else {
    # Cualquier otro día, restar un día
    $adjustedDate = $currentDate.AddDays(-1)
}

# Mostrar fechas
"Fecha actual: $($currentDate.ToString('yyyy-MM-dd'))"
"Fecha ajustada: $($adjustedDate.ToString('yyyy-MM-dd'))"
